@model Producer

@{
    ViewData["Title"] = "Update Producer";
}

<div class="row align-items-center">
    <div class="col-md-8 offset-2">
        <p><h1>Update Actor</h1></p>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3 text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePre" />
                </div>
                <div class="mb-3">
                    <label asp-for="ProfileURL" class="form-label"></label>
                    <input asp-for="ProfileURL" class="form-control" />
                    <span asp-validation-for="ProfileURL" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Bio" class="form-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                    <a class="btn btn-outline-secondary float-start" asp-action="Index">Show All</a>
                </div>
            </form>

        </div>
    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePre');
            output.src = $("#ProfileURL").val();
        })
    </script>
}
