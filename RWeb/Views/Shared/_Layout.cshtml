                <!--Modal Add Contact Customer-->
                <div class="modal fade" id="modal-add-customer-contact" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <!-- Thay đổi class modal-dialog-centered -->
                        <div class="modal-content">
                            <div class="modal-header bg-success">
                                <h5 class="modal-title text-dark text-uppercase" id="formModal">Cập nhật người liên hệ</h5>
                            </div>
                            <div class="modal-body modal-body-input-customer-contact">
                                <form action="/" method="post">
                                    <input id="CustomerId" type="hidden" class="form-control" value="" />
                                    <input id="CreatedDate" type="hidden" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                    <div class="row">
                                        <div class="form-group col-12 col-sm-4 col-md-4">
                                            <label>Người liên hệ</label>
                                            <input id="ContactName" type="text" class="form-control form-control-sm" value="" />
                                        </div>
                                        <div class="form-group col-12 col-sm-4 col-md-4">
                                            <label>Bộ Phận</label>
                                            <input id="CustomerPart" type="text" class="form-control form-control-sm" value="" />
                                        </div>
                                        <div class="form-group col-12 col-sm-4 col-md-4">
                                            <label>Chức vụ</label>
